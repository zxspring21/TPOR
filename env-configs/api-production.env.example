# Production Environment
# This environment is for production deployment on Google Cloud Run

# JWT Configuration (from Google Secret Manager)
JWT_SECRET_NAME=tpor-jwt-secret
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Authentication (from Google Secret Manager)
AUTH_USERNAME_SECRET_NAME=tpor-auth-username
AUTH_PASSWORD_SECRET_NAME=tpor-auth-password

# File Storage (Google Cloud Storage)
GOOGLE_CLOUD_STORAGE_BUCKET=tpor-intranet-files
GOOGLE_CLOUD_STORAGE_PATH=uploads/production

# Environment
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://0.0.0.0:8080

# Database (Google Cloud SQL)
DATABASE_CONNECTION_STRING_SECRET_NAME=tpor-database-connection-string

# Message Queue (Google Pub/Sub)
GOOGLE_CLOUD_PUBSUB_TOPIC=tpor-file-processing
GOOGLE_CLOUD_PUBSUB_SUBSCRIPTION=tpor-file-processing-sub

# Google Cloud Configuration
GOOGLE_CLOUD_CREDENTIALS_PATH=/app/credentials.json
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials.json
